@model SocialNetWorkv1._0.Models.UserInfo

@{
    ViewBag.Title = "Изменить фото";
}


@using (Html.BeginForm("UpLoad", "MyPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h4>Фото пользователя @User.Identity.Name</h4>
        <hr />
    
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <p>Фото пользователя</p>           
                <div class="row">
                    <div style="margin-left:30px">
                        <input type="hidden" value="@ViewBag.id" name="id" />
                        <input type="file" name="uploaded" />
                    </div>                  
                </div>  
        </div>

        <div class="form-group">
            <div style="margin-left:30px">
                <input type="submit" value="Изменить" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@using (Html.BeginForm("DeletePhoto", "MyPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <div style="margin-left:15px">
                <input type="submit" value="Удалить фото" class="btn btn-default" />
            </div>
        </div>   
}


<div>
    @Html.ActionLink("Выход на главную страницу", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
