@model IEnumerable<SocialNetWorkv1._0.Models.Chat>


@{
    ViewBag.Title = "Details";
}

<h2>Переписка с @ViewBag.Name </h2>

@Html.ActionLink("Перейти на страницу собеседника", "RedirectToInfoUser", new { id = ViewBag.ID })

@using (Ajax.BeginForm("PostMessege", new { }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Mess" }))
{
<div id="Mess">
    @{ Html.RenderPartial("ChatMessege"); } 
</div>

<p>Введите сообщение</p>   
    <input type="hidden" name="catcher" value="@ViewBag.ID" />        
    <div class="col-md-offset-2 col-md-10">       
       <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
}

@Scripts.Render("~/scripts/jquery-1.10.2.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")