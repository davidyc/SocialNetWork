@model IEnumerable<SocialNetWorkv1._0.Models.BadWord>

@{
    ViewBag.Title = "Все плохие слова";
}

<h2>Список всех запрещенных слов</h2>

<p>
    @Html.ActionLink("Добавить новое слово", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Слово</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.word)
        </td>
        <td>
            @Html.ActionLink("Редактированть", "Edit", new { id=item.ID }) |        
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
